@model IEnumerable<Test_Login.Models.stockPrice>

@{
    ViewBag.Title = ViewBag.id;
}
@{ 
    Layout = "~/Views/Shared/_LayoutRight.cshtml";
}
<style>
    .strategyButton {
        width: 300px;
        height: 105px;
        text-align: center;
        margin: -1px;
        padding: 0px;
        border: 0px;
        font-size: 20px;
        z-index: 3;
    }

    .buttonText {
        margin: -10px;
        position: relative;
    }

    .strategyDiv {
        width: 300px;
        height: 120px;
        padding: 0px;
        margin: 10px;
        z-index: 2;
    }

    .formStrategy {
        text-align: center;
        width: 60%;
    }

    .stockName {
        width: 120px;
        text-align: center;
        margin-bottom: 5px;
    }

    table {
        width: 100%;
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    .table td {
        text-align: center;
    }

    .table th {
        text-align: center;
    }

    #stockInfo {
        text-align: center;
    }

    .search {
        position: relative;
        display: inline-block;
    }
</style>

<section class="section jarallax text-white" data-jarallax data-speed="0.5" style="padding-top:50px; padding-bottom:50PX;">
    <img class="section-background-image jarallax-img" src="~/img/pngtree-red-gold-stock.jpg" alt="background image" />
    <div class="section-background-color" style="background-color: rgba(0, 0, 0, 0.2)"></div>
    <div class="section-content container text-left  d-flex flex-column align-items-center">
        @*<span class="badge badge-pill badge-ghost fs-1 font-family-secondary text-uppercase font-weight-bold letter-spacing-caption">
                Easy 3 steps online booking
            </span>*@
        <h1 class="nav justify-content-lg-center">常用策略</h1>
    </div>
</section>
<br />
<br />
<p>
    @ViewBag.stringID
</p>

<div class="formStrategy mx-auto">
    <form method="post">

        <div class=" alert alert-danger alert-dismissible fade show text-center">
            <h3 class="text-center">挖掘多方股票</h3>

        </div>
        <div>
            <div class="positiveStrategy">

                <button class="btn btn-outline-danger  strategyDiv" value="成交爆大量" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                    <h3><b>成交爆大量</b></h3>
                    <span class="buttonText">成交量大於5日均量</span>
                </button>
                @*<a href="#" data-toggle="smooth-scroll" data-target="#page-start-anchor">*@

                    <button class="btn btn-outline-danger  strategyDiv" value="四海遊龍" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                        <h3><b>四海遊龍1</b></h3>
                        <span class="buttonText">四海遊龍 skr skr</span>
                    </button>

                    <button class="btn btn-outline-danger  strategyDiv" value="四海遊龍" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                        <h3><b>四海遊龍</b></h3>
                        <span class="buttonText">四海遊龍 skr skr</span>
                    </button>

                    <button class="btn btn-outline-danger  strategyDiv" value="外資連買" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                        <h3><b>外資連買</b></h3>
                        <span class="buttonText">外資連續五日買超五百張(含)以上</span>
                    </button>

                    <button class="btn btn-outline-danger  strategyDiv" value="投信連買" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                        <h3><b>投信連買</b></h3>
                        <span class="buttonText">投信連續五日賣超五百張(含)以上</span>
                    </button>

                    <button class="btn btn-outline-danger  strategyDiv" value="外資投信同買" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                        <h3><b>外資投信同買</b></h3>
                        <span class="buttonText">前一日外資投信同買而且漲幅>2%</span>
                    </button>


                    <div class="negativeStrategy">
                        <div class="alert alert-primary">
                            <h3>挖掘空方股票</h3>
                        </div>

                        <button class="btn btn-outline-primary  strategyDiv" value="弱勢股票" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                            <h3><b>弱勢股票</b></h3>
                            <span class="buttonText">止跌部漲 嫩</span>
                        </button>

                        <button class="btn btn-outline-primary  strategyDiv" value="外資連賣" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                            <h3><b>外資連賣</b></h3>
                            <span class="buttonText">外資連續五日賣超一千張(含)以上</span>
                        </button>

                        <button class="btn btn-outline-primary  strategyDiv" value="投信連賣" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                            <h3><b>投信連賣</b></h3>
                            <span class="buttonText">投信連續五日賣超五百張(含)以上</span>
                        </button>

                        <button class="btn btn-outline-primary  strategyDiv" value="外資投信同賣" name="str" data-toggle="smooth-scroll" data-target="#selectReasult">
                            <h3><b>外資投信同賣</b></h3>
                            <span class="buttonText">前一日外資投信同賣而且跌幅>2%</span>
                        </button>
                    </div>
            </div>
        </div>
    </form>
</div>
<br />
<br />
<script src="/Scripts/jquery-3.4.1.js"></script>
