    /*Toggle Switch*/
    input[type=checkbox] {
        height: 0;
        width: 0;
        visibility: hidden;
    }

    label {
        cursor: pointer;
        width: 40px;
        height: 20px;
        background: grey;
        display: block;
        border-radius: 10px;
        position: relative;
    }

        label:after {
            content: '';
            position: absolute;
            top: 5px;
            left: 5px;
            width: 10px;
            height: 10px;
            background: #fff;
            border-radius: 10px;
            transition: 0.3s;
        }

    .switch-txt::before,
    .switch-txt::after {
        display: block;
        color: #fff;
        font-weight: bold;
        box-sizing: border-box;
    }

    .switch-txt::before {
        content: attr(turnOn);
        color: #fff;
    }

    .switch-txt::after {
        content: attr(turnOff);
        color: #ccc;
    }

    input:checked + label {
        background: #6f42c1;
    }

    label:active:after {
        width: 13px;
    }

    input:checked + label:after {
        left: calc(100% - 5px);
        transform: translateX(-100%);
    }
    /*Toggle Switch*/
</style>

